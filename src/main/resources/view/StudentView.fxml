<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="713.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep10.jdbc.controller.StudentViewController">
   <children>
      <Button fx:id="btnNewStudent" layoutX="25.0" layoutY="24.0" mnemonicParsing="false" onAction="#btnNewStudentOnAction" text="+ NEW STUDENT">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <VBox layoutX="10.0" layoutY="76.0" spacing="10.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="435.0" text="STUDENT ID">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="txtStudentId" alignment="CENTER" prefHeight="28.0" prefWidth="435.0" promptText="Generated ID">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="435.0" text="STUDENT NAME">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="txtStudentName" alignment="CENTER" prefHeight="28.0" prefWidth="435.0">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      <TextField fx:id="txtSearch" alignment="CENTER" layoutX="476.0" layoutY="71.0" prefHeight="28.0" prefWidth="506.0" promptText="Search Student" AnchorPane.rightAnchor="10.0">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <Pane layoutX="63.0" layoutY="216.0" style="-fx-border-color: lightgrey;">
         <children>
            <ImageView fx:id="imgPicture" fitHeight="150.0" fitWidth="200.0" layoutX="3.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/empty-photo.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <Button fx:id="btnClear" disable="true" layoutX="238.0" layoutY="293.0" mnemonicParsing="false" onAction="#btnClearOnAction" prefWidth="100.0" text="CLEAR">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="btnBrowse" layoutX="238.0" layoutY="231.0" mnemonicParsing="false" onAction="#btnBrowseOnAction" prefWidth="100.0" text="BROWSE">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="btnDelete" disable="true" layoutX="188.0" layoutY="387.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefWidth="100.0" text="DELETE">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="btnSave" defaultButton="true" layoutX="63.0" layoutY="387.0" mnemonicParsing="false" onAction="#btnSaveOnAction" prefWidth="100.0" text="SAVE">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <TableView fx:id="tblStudents" layoutX="484.0" layoutY="121.0" prefHeight="575.0" prefWidth="506.0">
        <columns>
          <TableColumn prefWidth="137.0" text="PICTURE" />
          <TableColumn prefWidth="129.0" text="ID" />
            <TableColumn prefWidth="168.0" text="NAME" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
